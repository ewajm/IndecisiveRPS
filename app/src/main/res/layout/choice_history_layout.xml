<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" >

    <TextView
        android:text="X vs Y"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/optionsTextView"
        android:gravity="center_horizontal"
        style="@style/SubHeading"/>
    <TextView
        android:text="Players: A, B"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/playersTextView"
        android:gravity="center_horizontal"
        android:textColor="@color/colorPrimaryText"
        android:textSize="24sp"
        />
    <TextView
        android:text="Winner: X"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/winnerTextView"
        android:gravity="center_horizontal"
        style="@style/Heading"
        />
    <TextView
        android:text="@string/round_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/roundHistoryTextView"
        android:textColor="@color/colorPrimaryText"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/roundHistoryListView">
    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/closeDialogButton"
            android:text="@string/close"
            style="@style/ButtonAppTheme"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/decideAgainButton"
            android:text="@string/decide_again"
            style="@style/ButtonAppTheme"/>
    </LinearLayout>
</LinearLayout>